@model Category
@{
    ViewData["Title"] = Model.Name;
}

<div class="text-center">
    <h1 class="display-4">@Model.Name</h1>
    <form method="post">
        <label>
            Namn
            <input type="text" name="name" value="@Model.Name">
        </label>

        <input type="hidden" name="id" value="@Model.Id">
        <button type="submit">Uppdatera</button>
    </form>
</div>